<div class="d-flex justify-content-between align-items-center">
  <h3 class="mb-5">Messages</h3>
  <form method="post" action="messages/store" class="form-inline">
    <button class="btn btn-sm btn-primary" type="submit">Add message</button>
  </form>
</div>

{{#if messages}}
<ul class="list-group">
  {{#each messages }}
  <li class="list-group-item d-flex justify-content-between">
    <div>
      <span class="mr-4">{{ id }}</span>
      <span class="ml-4">{{ createdAt }}</span>
    </div>
    <div class="d-inline-flex justify-content-between">
      <form method="post" action="/messages/{{ id }}/delete" class="form-inline mr-2">
        <button class="btn btn-danger btn-sm" href="#">Delete</button>
      </form>

      <a class="btn btn-outline-success btn-sm ml-2" href="/messages/{{ id }}/details">Details</a>
    </div>
  </li>
  {{/each }}
</ul>
{{else }}
<p>No content created yet</p>
{{/if }}