<div class="d-flex justify-content-between align-items-center">
  <h3 class="mb-5">Settings</h3>
  <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Change settings</button>
</div>

{{#if settings}}
<ul class="list-group">
  {{#each settings }}
  <li class="list-group-item d-flex justify-content-between">
    <span class="mr-4">{{ id }}</span>
    <span class="ml-4">{{ smilPlayerPath }}</span>
  </li>
  {{/each }}
</ul>
{{else }}
<p>No settings created yet</p>
{{/if }}

<div class="modal fade" tabindex="-1" id="exampleModal" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit app settings</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p0">
        <div class="row">
          <form action="/settings" method="post" enctype="multipart/form-data" id="smil-form">
            <div class="mb-3 form-group">
              <label for="smilPlayerPath" class="form-label">Path name</label>
              <input type="text" class="form-control" name="smilPlayerPath" id="smilPlayerPath">
            </div>
            <button type="submit" class="px-3 btn btn-sm btn-primary">Save</button>
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">close</button>
      </div>
    </div>
  </div>
</div>